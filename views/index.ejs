<% const animationDelay = 50 %> 
<% let animationDelaySave = 0 %> 
<% const getDelay = (delay) => { animationDelaySave += delay; return animationDelaySave; } %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <title>Calisthenics Matrix</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=VT323&display=swap");
      body {
        background-color: #0f140f;
        background-image: radial-gradient(#007a021a 1px, transparent 1px),
          radial-gradient(#007a021a 1px, #0f140f 1px);
        background-size: 10px 10px;
        background-position: 0 0, 20px 2px;
        font-family: "VT323", monospace;
        color: white;
      }
    </style>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
  </head>
  <body class="">
    <div
      class="CONTENT z-40 p-[1.75rem] flex flex-col justify-center items-center md:items-start"
    >
      <div class="md:ml-40">
        <h1
          class="bg-opacity-80 text-black md:text-7xl text-5xl bold uppercase text-center mb-9 rounded-sm"
        >
          <span class="MatrixTextEffect">Calisthenics Matrix</span>
        </h1>

        <div
          class="relative LINKS flex flex-col text-4xl md:text-5xl justify-center items-start gap-5"
        >
          <button
            class="relative custom-btn btn-3 animate__animated animate__fadeIn animate__faster"
            style="animation-delay: <%= getDelay(animationDelay) %>ms"
          >
            <span class="MatrixTextEffectWhite px-2">
              <a href="/exercises">Exercises</a>
              <p class="absolute top-0 left-[-2rem] hidden md:block">0</p>
            </span>
          </button>
          <button
            class="relative custom-btn btn-3 animate__animated animate__fadeIn animate__faster"
            style="animation-delay: <%= getDelay(animationDelay) %>ms"
          >
            <span class="MatrixTextEffectWhite px-2">
              <a href="/progressions">Progressions</a>
              <p class="absolute top-0 left-[-2rem] hidden md:block">1</p>
            </span>
          </button>

          <button
            class="relative custom-btn btn-3 animate__animated animate__fadeIn animate__faster"
            style="animation-delay: <%= getDelay(animationDelay) %>ms"
          >
            <span class="MatrixTextEffectWhite px-2">
              <a href="/about">About</a>
              <p class="absolute top-0 left-[-2rem] hidden md:block">2</p>
            </span>
          </button>
          <button
            class="relative custom-btn btn-3 animate__animated animate__fadeIn animate__faster"
            style="animation-delay: <%= getDelay(animationDelay) %>ms"
          >
            <span class="MatrixTextEffectWhite px-2">
              <a href="/newExercise">Add Exercise</a>
              <p class="absolute top-0 left-[-2rem] hidden md:block">3</p>
            </span>
          </button>
          <button
            class="relative custom-btn btn-3 animate__animated animate__fadeIn animate__faster"
            style="animation-delay: <%= getDelay(animationDelay) %>ms"
          >
            <span class="MatrixTextEffectWhite px-2">
              <a href="https://github.com/darwin-dev-diaz" target="_blank"
                >Author</a
              >
              <p class="absolute top-0 left-[-2rem] hidden md:block">4</p>
            </span>
          </button>
          <button
            class="relative custom-btn btn-3 animate__animated animate__fadeIn animate__faster"
            style="animation-delay: <%= getDelay(animationDelay) %>ms"
          >
            <span class="MatrixTextEffectWhite px-2">
              <a
                href="https://github.com/darwin-dev-diaz/odin-inventory-app"
                target="_blank"
                >Project Repo</a
              >
              <p class="absolute top-0 left-[-2rem] hidden md:block">5</p>
            </span>
          </button>
        </div>
      </div>
    </div>
  </body>
</html>
