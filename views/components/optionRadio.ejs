<li class="optionRadio">
  <input
    type="radio"
    id="<%= option%>-option"
    name="<%= filterType%>Filter"
    value="<%= value%>"
    class="hidden peer"
    data-genre-box
  />
  <label
    for="<%= option%>-option"
    class="inline-flex items-center MatrixBoxEffectGrey justify-between w-full p-3 rounded-sm cursor-pointer selectionHoverLow"
  >
    <div class="block">
      <div class="w-full text-lg md:text-xl font-semibold"><%= option%></div>
    </div>
  </label>
</li>
