<a
  class="relative flex flex-col w-full max-w-80 mx-auto aspect-square rounded-sm MatrixBoxEffectGrey bg-[#31313170] div-3"
  href="<%= link%>"
>
  <div class="w-full h-full p-6 flex flex-col justify-between items-center">
    <img src="<%= imageUrl %>" class="w-16 aspect-square" />

    <h3 class="text-3xl lg:text-2xl MatrixTextEffectWhiteLow"><%= name %></h3>
    <p class="text-2xl text-center leading-5 MatrixTextEffectWhiteLow">
      <%= description %>
    </p>
  </div>

  <div class="bt-hover absolute w-full h-full"></div>
</a>
