<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
/>
<a
  href="/exercise/<%= exercise.skill_id %>"
  class="relative EXERCISE-BOX bg-darkSurface-a30 bg-opacity-30 rounded-sm w-full h-52 justify-self-center flex flex-col MatrixBoxEffectGrey md:h-64 cursor-pointer animate__animated animate__fadeIn animate__faster div-3"
  style="
    animation-delay: <%= (50 * index) %>ms;
    background-color: rgba(
      <%= 22 + (35 * index) %>,
      163,
      <%= 74 + (10 * index) %>,
      0.35
    );
  "
>
  <div class="absolute w-full h-full bt-hover"></div>
  <div
    class="absolute w-full max-h-[80%] h-full z-40"
    style="
      backdrop-filter: grayscale(1) blur(0.5px);
      background-color: rgba(
        <%= 22 + (35 * index) %>,
        163,
        <%= 74 + (10 * index) %>,
        0.15
      );
    "
  ></div>
  <div
    class="w-full max-h-[80%] h-full bg-center bg-cover"
    style="
      filter: brightness(0.75);
      background-image: url(<%= exercise.imgUrl%>);
    "
  ></div>
  <p
    class="text-center text-xl md:text-2xl tracking-wider MatrixTextEffectWhiteLow"
  >
    <%= exercise.name %>
  </p>
</a>
